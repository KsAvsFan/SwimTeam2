<h4>Swim Team Roster</h4>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Age</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @teams.each do |team| %>
  <tr>
    <td><b><%= team.swimmer.last_name %></b>, <%= team.swimmer.first_name %></td>
    <td><%= team.swimmer.gender.first %></td>
    <td><%= team.swimmer.age_in_years %></td>
    <td><%= team.swimmer.email %></td>
    <td>
        <div class="btn-group">
          <%= link_to 'Details', swimmer_path(team.swimmer), :class => "btn btn-small" %>
          <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Edit', edit_swimmer_path(team.swimmer) %></li>
            <li><%= link_to 'Remove', team, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            <li><%= link_to 'Splits', splits_path(:filter => team.swimmer.id) %></li>
          </ul>
        </div><!-- /btn-group -->
    </td>
    <td>
        <div class="btn-group">
          <%= link_to 'Family', family_path(:id => team.swimmer.family_id), :class => "btn btn-small" %>
          <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Siblings', swimmers_path(:filter => team.swimmer.family_id) %></li>
          </ul>
        </div><!-- /btn-group -->
    </td>
  </tr>
<% end %>
</table>

