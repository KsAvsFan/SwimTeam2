<h4>Forgot your password?</h4>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :name => "timeform", :class => "form-horizontal well" }) do |f| %>
  	<%= devise_error_messages! %>
	<div class="control-group">
	  	<%= f.label :email, :class => "control-label" %>
		<div class="controls">
			<%= f.email_field :email %>
		</div>
	</div>
	<div class="controls">
		<%= f.submit "Send me reset password instructions!", "class"=>"btn btn-success" %>
	</div>
<% end %>

<%= render "devise/shared/links" %>
