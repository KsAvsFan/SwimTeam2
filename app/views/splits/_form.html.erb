<%= form_for(@split, :html => { :name => "timeform"}) do |f| %>
  <% if @split.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@split.errors.count, "error") %> prohibited this split from being saved:</h2>

      <ul>
      <% @split.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :swimmer_id %><br />
    <%= f.collection_select(:swimmer_id, Swimmer.all, :id, :full_name) %>
  </div>
  <div class="field">
    <%= f.label :Date %><br />
    <%= f.text_field :event_date, :value => Date.today %>
  </div>
  <div class="field">
    <%= f.label :stroke %><br />
    <%= f.collection_select(:stroke, Event.all, :name, :name)%>
  </div>
  
  <div class="field">
    <%= f.label :event_type %><br />
    <%= f.text_field :event_type, :placeholder => "Practice, meet, etc." %>
  </div>
  <div class="field">
    <%= f.label :split_time %><br />
    <%= f.text_field :split_time, :id => "timetextarea", :value => "00:00" %><br />
    <%= f.label :laptime %><br />
    <%= f.text_field :split_time, :id => "laptime" %>
    <input type=button name="start" value="Start/Lap" onclick="sw_start()"> 
    <input type=button name="stop" value="Stop" onclick="Stop()"> 
    <input type=button name="reset" value="Reset" onclick="Reset()">
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>